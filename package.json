{
    "name": "logseq-metrics",
    "version": "0.8",
    "description": "Track and visaulize your personal habits, goals and business results in Logseq.",
    "author": "John McCann",
    "license": "MIT",
    "scripts": {
        "dev": "parcel ./index.html --public-url ./",
        "clean": "rm -rf ./dist/*",
        "build": "tailwindcss -i ./index.css -o ./output.css && parcel build --public-url . --no-source-maps --no-optimize index.html inline.html",
        "prod": "tailwindcss -i ./index.css -o ./output.css && parcel build --public-url . --no-source-maps index.html inline.html"
    },
    "devDependencies": {
        "@logseq/libs": "^0.0.9",
        "parcel": "^2.0.0",
        "tailwindcss": "^3.1.8"
    },
    "dependencies": {
        "chart.js": "^3.9.1",
        "chartjs-adapter-date-fns": "^2.0.0",
        "date-fns": "^2.29.3"
    },
    "logseq": {
        "id": "_xxxxxxx",
        "main": "dist/index.html",
        "icon": "./logo.png"
    }
}
